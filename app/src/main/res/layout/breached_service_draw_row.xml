<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_bar_status_ranking"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorPrimaryDarkAmber">

            <ImageView
                android:id="@+id/top_bar_trophy_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_menu_ranking"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/top_bar_trophy_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/breached_service_logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginRight="75dp"
                android:layout_marginLeft="75dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/breached_service_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:lines="1"
                    android:text="Adobe"/>

                <TextView
                    android:id="@+id/breached_service_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:text="00000"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/breached_service_status"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>